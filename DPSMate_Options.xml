<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
    ..\..\..\FrameXML\UI.xsd">
	
	<Frame name="DPSMate_PopUp" movable="true" hidden="true">
		<Size x="250" y="60" />
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="6" right="6" top="6" bottom="6" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="24" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="24" />
			</EdgeSize>
        </Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parent_Text" inherits="GameFontNormalSmall" justifyH="CENTER" alphaMode="ADD">
					<Size x="250" y="38" />
					<Anchors>
						<Anchor point="TOP" />
					</Anchors>
					<Color r="1" g="1" b="1" a="1" />
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnMouseDown>
				this:StartMoving()
			</OnMouseDown>
			<OnMouseUp>
				this:StopMovingOrSizing()
			</OnMouseUp>
			<OnLoad>
				DPSMate_PopUp_Text:SetText(DPSMate.localization.popup)
				DPSMate_PopUp_AcceptText:SetText(DPSMate.localization.accept)
				DPSMate_PopUp_CancelText:SetText(DPSMate.localization.cancel)
				this:SetClampedToScreen()
			</OnLoad>
		</Scripts>
		<Frames>
			<Button name="$parent_Accept">
				<Size x="80" y="24" />
				<Anchors>
					<Anchor point="TOP" relativeTo="$parent_Text" relativePoint="BOTTOM">
						<Offset x="-50" y="7" />
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentText" inherits="GameFontNormalSmall">
							<Size x="80" y="24" />
							<Anchors>
								<Anchor point="TOP">
									<Offset x="0" y="4" />
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>
						DPSMate.Options:PopUpAccept()
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\Buttons\UI-DialogBox-Button-Up"/>
				<PushedTexture file="Interface\Buttons\UI-DialogBox-Button-Down"/>
				<HighlightTexture file="Interface\Buttons\UI-DialogBox-Button-Highlight" alphaMode="ADD"/>
			</Button>
			<Button name="$parent_Cancel">
				<Size x="80" y="24" />
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parent_Accept" relativePoint="RIGHT">
						<Offset x="20" y="0" />
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentText" inherits="GameFontNormalSmall">
							<Size x="80" y="24" />
							<Anchors>
								<Anchor point="TOP">
									<Offset x="0" y="4" />
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>
						DPSMate_PopUp:Hide()
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\Buttons\UI-DialogBox-Button-Up"/>
				<PushedTexture file="Interface\Buttons\UI-DialogBox-Button-Down"/>
				<HighlightTexture file="Interface\Buttons\UI-DialogBox-Button-Highlight" alphaMode="ADD"/>
			</Button>
		</Frames>
	</Frame>
	
	<Frame name="DPSMate_Report" movable="true" hidden="true">
		<Size x="180" y="170" />
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="4" right="4" top="4" bottom="4" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="12" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="12" />
			</EdgeSize>
        </Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parent_Text" inherits="GameFontNormalSmall" justifyH="CENTER" alphaMode="ADD">
					<Size x="160" y="20" />
					<Anchors>
						<Anchor point="TOP" />
					</Anchors>
					<Color r="1" g="1" b="1" a="1" />
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnMouseDown>
				this:StartMoving()
			</OnMouseDown>
			<OnMouseUp>
				this:StopMovingOrSizing()
			</OnMouseUp>
			<OnLoad>
				DPSMate_Report_Text:SetText(DPSMate.localization.report.." - DPSMate")
			</OnLoad>
		</Scripts>
		<Frames>
			<Button name="$parent_Close">
				<Size x="20" y="20" />
				<Anchors>
					<Anchor point="TOPRIGHT" />
				</Anchors>
				<Scripts>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT")
						GameTooltip:SetText(DPSMate.localization.close, nil, nil, nil, nil, 1)
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
					<OnClick>
						DPSMate_Report:Hide()
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Up"/>
				<PushedTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Down"/>
				<HighlightTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Highlight" alphaMode="ADD"/>
			</Button>
			<Frame name="$parent_Channel" inherits="UIDropDownMenuTemplate" id="1">
				<Size x="100" y="24" />
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_Text" relativePoint="BOTTOMLEFT">
						<Offset x="-20" y="-10" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT")
						GameTooltip:SetText(DPSMate.localization.channelTooltip, nil, nil, nil, nil, 1)
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
					<OnLoad>
						UIDropDownMenu_SetWidth(100)
						UIDropDownMenu_Initialize(this, DPSMate.Options.ChannelDropDown)
						getglobal(this:GetName().."_Text"):SetText(DPSMate.localization.channel)
					</OnLoad>
					<OnShow>
						UIDropDownMenu_Initialize(this, DPSMate.Options.ChannelDropDown)
					</OnShow>
				</Scripts>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parent_Text" inherits="GameFontNormalSmall" justifyH="LEFT" alphaMode="ADD">
							<Size x="100" y="20" />
							<Anchors>
								<Anchor point="TOP">
									<Offset x="20" y="15" />
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			<Slider name="$parent_Lines" inherits="OptionsSliderTemplate">
				<Size>
					<AbsDimension x="160" y="14" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_Text" relativePoint="BOTTOMLEFT">
						<Offset x="0" y="-55" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT")
						GameTooltip:SetText(DPSMate.localization.SliderTooltip, nil, nil, nil, nil, 1)
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
					<OnValueChanged>
						getglobal(this:GetName().."Text"):SetText(DPSMate.localization.Slider..": "..this:GetValue())
					</OnValueChanged>
					<OnLoad>
						this:SetMinMaxValues(1,25)
						this:SetValue(6)
						this:SetValueStep(1)
						getglobal(this:GetName().."Text"):SetText(DPSMate.localization.Slider..": 6")
						getglobal(this:GetName().."Low"):SetText("1")
						getglobal(this:GetName().."High"):SetText("25")
					</OnLoad>
				</Scripts>
			</Slider>
			<EditBox name="$parent_Editbox" autoFocus="false" inherits="InputBoxTemplate">
				<Size x="160" y="14" />
				<Anchors>
					<Anchor point="TOP" relativeTo="$parent_Lines" relativePoint="BOTTOM">
						<Offset x="3" y="-32" />
					</Anchor>
				</Anchors>
				<FontString inherits="ChatFontNormal" bytes="32"/>
				<Scripts>
					<OnLoad>
						this:SetMaxLetters(32)
						getglobal(this:GetName().."_Text"):SetText(DPSMate.localization.EditboxTitle)
					</OnLoad>
					<OnEnterPressed>
						this:ClearFocus()
					</OnEnterPressed>
					<OnEnter>
						GameTooltip:SetOwner(this, "ANCHOR_RIGHT")
						GameTooltip:SetText(DPSMate.localization.EditboxTooltip, nil, nil, nil, nil, 1)
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide()
					</OnLeave>
				</Scripts>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parent_Text" inherits="GameFontNormalSmall" justifyH="LEFT">
							<Size>
								<AbsDimension x="120" y="20"/>
							</Size>
							<Anchors>
								<Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
									<Offset x="-5" y="0" />
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</EditBox>
			<Button name="$parent_ReportButton">
				<Size x="160" y="26" />
				<Anchors>
					<Anchor point="BOTTOM" />
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentText" inherits="GameFontNormalSmall">
							<Size x="80" y="24" />
							<Anchors>
								<Anchor point="TOP">
									<Offset x="0" y="4" />
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnClick>
						DPSMate.Options:Report()
					</OnClick>
					<OnLoad>
						getglobal(this:GetName().."Text"):SetText(DPSMate.localization.report)
					</OnLoad>
				</Scripts>
				<NormalTexture file="Interface\Buttons\UI-DialogBox-Button-Up"/>
				<PushedTexture file="Interface\Buttons\UI-DialogBox-Button-Down"/>
				<HighlightTexture file="Interface\Buttons\UI-DialogBox-Button-Highlight" alphaMode="ADD"/>
			</Button>
		</Frames>
	</Frame>
	
	----------------------------------------------------------------------------------
	--------------            Templates for the config Menu             --------------                                  
	----------------------------------------------------------------------------------
	
	<Button name="DPSMate_Template_MenuButton" virtual="true">
		<Size x="120" y="14" />
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentText" inherits="GameFontNormalSmall" justifyH="LEFT" justifyV="CENTER">
					<Size x="120" y="14" />
					<Anchors>
						<Anchor point="TOP">
							<Offset x="3" y="0" />
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="ARTWORK">
				<Texture name="$parentTexture" file="Interface\AddOns\DPSMate\images\UI-Listbox-Highlight2" hidden="true">
					<Size x="120" y="14" />
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter>
				getglobal(this:GetName().."Text"):SetTextColor(1,1,1,1)
			</OnEnter>
			<OnLeave>
				if (not this.selected) then
					getglobal(this:GetName().."Text"):SetTextColor(1,0.82,0,1)
				end
			</OnLeave>
			<OnClick>
				for i=1, 9 do
					getglobal("DPSMate_ConfigMenu_Menu_Button"..i).selected=false
					getglobal("DPSMate_ConfigMenu_Menu_Button"..i.."Texture"):Hide()
					getglobal("DPSMate_ConfigMenu_Menu_Button"..i.."Text"):SetTextColor(1,0.82,0,1)
				end
				this.selected=true
				getglobal(this:GetName().."Texture"):Show()
				getglobal(this:GetName().."Text"):SetTextColor(1,1,1,1)
			</OnClick>
			<OnLoad>
				this.selected=false
			</OnLoad>
		</Scripts>
		<HighlightTexture file="Interface\AddOns\DPSMate\images\UI-Listbox-Highlight2" alphaMode="ADD" />
	</Button>
	
	----------------------------------------------------------------------------------
	--------------                 DPSMate Config Menu                  --------------                                  
	----------------------------------------------------------------------------------
	
	<Frame name="DPSMate_ConfigMenu" movable="true" hidden="false">
		<Size x="450" y="300" />
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets left="4" right="4" top="4" bottom="4" />
			<TileSize val="12" />
			<EdgeSize val="12" />
			<Color r="0.157" g="0.08" b="0.06" a="1" />
        </Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parent_Title" inherits="GameFontNormalLarge" justifyH="LEFT" justifyV="CENTER" text="DPSMate">
					<Size x="450" y="40" />
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="10" y="0" />
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnMouseDown>
				this:StartMoving()
			</OnMouseDown>
			<OnMouseUp>
				this:StopMovingOrSizing()
			</OnMouseUp>
		</Scripts>
		<Frames>
			<Frame name="$parent_Menu">
				<Size x="128" y="250" />
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parent_Title" relativePoint="BOTTOMLEFT" />
				</Anchors>
				<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<BackgroundInsets left="4" right="4" top="4" bottom="4" />
					<TileSize val="12" />
					<EdgeSize val="12" />
					<Color r="0.157" g="0.08" b="0.06" a="0.5" />
				</Backdrop>
				<Frames>
					<Button name="$parent_Button1" inherits="DPSMate_Template_MenuButton">
						<Anchors>
							<Anchor point="TOP">
								<Offset x="0" y="-5" />
							</Anchor>
						</Anchors>
						<Scripts>
							<OnLoad>
								this.selected=true
								getglobal(this:GetName().."Texture"):Show()
								getglobal(this:GetName().."Text"):SetText("Windows")
								getglobal(this:GetName().."Text"):SetTextColor(1,1,1,1)
							</OnLoad>
						</Scripts>
					</Button>
					<Button name="$parent_Button2" inherits="DPSMate_Template_MenuButton">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Button1" relativePoint="BOTTOM" />
						</Anchors>
						<Scripts>
							<OnLoad>
								getglobal(this:GetName().."Text"):SetText("Bars")
							</OnLoad>
						</Scripts>
					</Button>
					<Button name="$parent_Button3" inherits="DPSMate_Template_MenuButton">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Button2" relativePoint="BOTTOM" />
						</Anchors>
						<Scripts>
							<OnLoad>
								getglobal(this:GetName().."Text"):SetText("Title bar")
							</OnLoad>
						</Scripts>
					</Button>
					<Button name="$parent_Button4" inherits="DPSMate_Template_MenuButton">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Button3" relativePoint="BOTTOM" />
						</Anchors>
						<Scripts>
							<OnLoad>
								getglobal(this:GetName().."Text"):SetText("Window")
							</OnLoad>
						</Scripts>
					</Button>
					<Button name="$parent_Button5" inherits="DPSMate_Template_MenuButton">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Button4" relativePoint="BOTTOM" />
						</Anchors>
						<Scripts>
							<OnLoad>
								getglobal(this:GetName().."Text"):SetText("Mode Switching")
							</OnLoad>
						</Scripts>
					</Button>
					<Button name="$parent_Button6" inherits="DPSMate_Template_MenuButton">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Button5" relativePoint="BOTTOM" />
						</Anchors>
						<Scripts>
							<OnLoad>
								getglobal(this:GetName().."Text"):SetText("Data resets")
							</OnLoad>
						</Scripts>
					</Button>
					<Button name="$parent_Button7" inherits="DPSMate_Template_MenuButton">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Button6" relativePoint="BOTTOM" />
						</Anchors>
						<Scripts>
							<OnLoad>
								getglobal(this:GetName().."Text"):SetText("General options")
							</OnLoad>
						</Scripts>
					</Button>
					<Button name="$parent_Button8" inherits="DPSMate_Template_MenuButton">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Button7" relativePoint="BOTTOM" />
						</Anchors>
						<Scripts>
							<OnLoad>
								getglobal(this:GetName().."Text"):SetText("Columns")
							</OnLoad>
						</Scripts>
					</Button>
					<Button name="$parent_Button9" inherits="DPSMate_Template_MenuButton">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_Button8" relativePoint="BOTTOM" />
						</Anchors>
						<Scripts>
							<OnLoad>
								getglobal(this:GetName().."Text"):SetText("Tooltips")
							</OnLoad>
						</Scripts>
					</Button>
				</Frames>
			</Frame>
			<ScrollFrame name="$parent_ScrollFrame">
				<Size x="300" y="250" />
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parent_Menu" relativePoint="RIGHT" />
				</Anchors>
				<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<BackgroundInsets left="4" right="4" top="4" bottom="4" />
					<TileSize val="12" />
					<EdgeSize val="12" />
					<Color r="0.157" g="0.08" b="0.06" a="0.5" />
				</Backdrop>
				<Scripts>
					<OnLoad>
						this:SetVerticalScroll(0)
					</OnLoad>
					<OnMouseWheel>
						DPSMate.Options:OnVerticalScroll(this, arg1)
						--this:UpdateScrollChildRect()
					</OnMouseWheel>
				</Scripts>
				<ScrollChild>
					<Frame>
					<Size x="300" y="800" />
					</Frame>
				</ScrollChild>
			</ScrollFrame>
		</Frames>
	</Frame>
	
	<Frame name="DPSMate_Options">
		<Scripts>
			<OnLoad>
				this:RegisterEvent("ADDON_LOADED")
				this:RegisterEvent("PLAYER_ENTERING_WORLD")
				
				this:RegisterEvent("PARTY_MEMBERS_CHANGED")
				
				this:RegisterEvent("CHAT_MSG_COMBAT_SELF_HITS")
				this:RegisterEvent("CHAT_MSG_COMBAT_SELF_MISSES")
				this:RegisterEvent("CHAT_MSG_SPELL_SELF_DAMAGE")
				this:RegisterEvent("CHAT_MSG_SPELL_PERIODIC_HOSTILEPLAYER_DAMAGE")
				this:RegisterEvent("CHAT_MSG_SPELL_PERIODIC_CREATURE_DAMAGE")
				
				this:RegisterEvent("CHAT_MSG_COMBAT_PARTY_HITS")
				this:RegisterEvent("CHAT_MSG_SPELL_PARTY_DAMAGE")
				this:RegisterEvent("CHAT_MSG_COMBAT_PARTY_MISSES")
				
				this:RegisterEvent("PLAYER_REGEN_DISABLED")
				this:RegisterEvent("PLAYER_REGEN_ENABLED")
				
				this:RegisterEvent("PLAYER_AURAS_CHANGED")
				
				DPSMate.Parser:OnLoad()
			</OnLoad>
			<OnEvent>
				DPSMate.DB:OnEvent(event)
				DPSMate.Parser:OnEvent(event)
				DPSMate.Options:OnEvent(event)
			</OnEvent>
		</Scripts>
	</Frame>
	
</Ui>